[user]
    name = Andy Pan
    email = qbane@local  # FIXME: change this

[alias]
    lg = log --color --graph --all --decorate --pretty=format:'%C(yellow)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    s = status --show-stash --ignored

[init]
    defaultBranch = master

[column]
    ui = auto

[diff]
    algorithm = histogram
    colorMoved = default
    mnemonicPrefix = true

[merge]
    conflictstyle = zdiff3

### for delta users ###

#[core]
#    pager = delta

#[interactive]
#    diffFilter = delta --color-only

[delta]
    syntax-theme = zenburn
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
